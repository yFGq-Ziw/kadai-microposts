<% @fav = current_user.favorites %>
  <% if current_user.likes?(micropost) %>
    <%= form_for(@fav.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= image_submit_tag "icon_red_heart.png" %>
    <% end %>
  <% else %>
    <%= form_for(@fav.build) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= image_submit_tag "icon_heart.png" %>
    <% end %>
  <% end %>