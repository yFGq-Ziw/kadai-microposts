<header>
  <nav id="global_navi" class="navbar navbar-inverse navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        </button>
        <ul>
          <li class="<%= "current" if current_page?(root_path) %>">
            
            <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-pencil"  style="font-size: 17px"aria-hidden="true" style="font-size: 22px"></span>Microposts</a>
          </li>
        </ul>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          
          <% if logged_in? %>

          <li class="<%= "current" if current_page?(likes_user_path(current_user)) %>">
            <%= link_to likes_user_path(current_user) do %>
            <span class="glyphicon glyphicon-heart" style="font-size: 14px" aria-hidden="true" style="font-size: 15px"></span>Favorites
            <% end %>
          </li>
          
          <li class="<%= "current" if current_page?(users_path) %>">
            <%= link_to users_path do %>
            <span class="glyphicon glyphicon-user" style="font-size: 14px" aria-hidden="true" style="font-size: 15px"></span>Users
            <% end %>
          </li>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">

              <ul class="<%= "current" if current_page?(user_path(current_user)) %>">
              <%= current_user.name %>
              <span class="caret">
              </span>
              </ul>
            </a>
            <ul class="drop dropdown-menu">
              <li><%= link_to 'My profile', user_path(current_user) %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'Logout', logout_path, method: :delete %></li>
            </ul>
          </li>

          <% else %>
          <li><%= link_to 'Signup', signup_path %></li>
          <li><%= link_to 'Login', login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  
</header>